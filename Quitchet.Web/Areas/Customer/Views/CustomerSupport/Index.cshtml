<script type="text/javascript">
    //Script to avoid spaces
    $("#comment").on("keypress", function (e)
    {
        if ((e.which === 32 && !this.value.length)) {
            e.preventDefault();
        }
        else {
            $('#btn_SendFeedback').attr("disabled", false);
        }
    });
    //Reasy Event
    $(document).ready(function () {
        var userid="";
        userid=@PkeyUserId;
        $('#btn_SendFeedback').attr("disabled", true);
        if(userid!="")
        {   
            $("#mymenu li").css("pointer-events", "auto");
        }
        else{
            $("#mymenu li").css("pointer-events", "none");
            $("#mymenu li a[href='/Customer/SearchFilter/Index']").css("pointer-events", "auto");
        }
    });
    // Event To Send Data througj Ajax Call
    $("#btn_SendFeedback").click(function () {
        var ta = $('#comment').val();
        if (ta.length == "") {
            //    alert("Please Enter Comment");
            //$("#heading").text("Alert!");
            //$("#content_text").text("Please Enter Feedback ");
            //$("#AlertPopup").modal("show");
            $('#error_msg').text('Please Enter Feedback Comments');
        }
        else {
            $('#error_msg').text('');
            var bug = $('input[name = "recommend"]:checked').val();
            if (bug == null || bug=="No")
                bug = "false";
            else
                bug="true";

            $.ajax({
                url: "/CustomerSupport/InsertFeedback",
                type: "GET",
                dataType: "json",
                contentType: "application/json,charset=utf-8",
                data: { comment: ta, bug: bug },
                success: function (data) {
                    if (data == "1") {
                        $('#MessageAgent').modal('show');
                    }
                },
                error: function () {
                }
            });
        }
    });
    //Page Load When Click k In Thank You Popup
    $("#okbtn").click(function () {
        //location.reload();
    });
</script>
